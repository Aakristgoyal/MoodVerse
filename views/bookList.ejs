<%- include('partials/header') %>

<main>
  <h1>All Books</h1>

  <% if (books.length > 0) { %>
    <div class="book-container">
      <% books.forEach(book => { %>
        <div class="book-card">

          <!-- ✅ Book Cover -->
          <% if (book.coverImage) { %>
            <img src="<%= book.coverImage %>" alt="Cover for <%= book.title %>" class="book-card-image" />
          <% } else { %>
            <img src="/images/default-book.png" alt="Default Book Cover" class="book-card-image" />
          <% } %>

          <!-- ✅ Title and Author only -->
          <h3>
            <a href="/books/<%= book._id %>" class="book-link">
              <%= book.title %>
            </a>
          </h3>
          <p class="book-author">By <%= book.author %></p>

        </div>
      <% }) %>
    </div>
  <% } else { %>
    <div class="no-results">
      <h2>No results found.</h2>
      <p>Try searching with a different keyword or check the spelling.</p>
      <a href="/books" class="back-button">← Back to All Books</a>
    </div>
  <% } %>
</main>

<%- include('partials/footer') %>
