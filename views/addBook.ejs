<%- include('partials/header') %>

<div class="book-detail-container">
  <h1 class="book-detail-title">Add New Book</h1>
  <p class="book-detail-author">Share your favorite book with the community</p>
  
  <form action="/add-book" method="POST" enctype="multipart/form-data" class="book-form">
    <input name="title" required placeholder="Title" />
    <input name="author" required placeholder="Author" />
    <textarea name="desc" placeholder="Description"></textarea>
    <input name="moodtags" required placeholder="Mood tags (comma-separated)" />
    <input name="uploadedBy" placeholder="Your name" />

    <label for="image">Upload Cover Image:</label>
    <input type="file" name="coverImage" accept="image/*" required />

    <label for="pdfofbook">Upload Book PDF:</label>
    <input type="file" name="pdfofbook" accept="application/pdf" />

    <button type="submit">Submit Book</button>
  </form>
  
  <a href="/" class="book-detail-back">‚Üê Back to All Books</a>
</div>

<%- include('partials/footer') %>