<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>MoodVerse</title>
  <link rel="stylesheet" href="/css/styles.css" />
</head>
<body>

  <!-- Navbar -->
  <header class="navbar">

    <!-- Left: Logo -->
    <div class="navbar-section logo">
      <a href="/">MoodVerse</a>
    </div>

    <!-- Hamburger Icon (Mobile) -->
    <div class="hamburger" onclick="toggleMenu()">‚ò∞</div>

    <!-- Center: Navigation Links -->
    <nav class="navbar-section nav-links" id="navLinks">
      <a href="/">Home</a>
      <a href="/add-book">Add Book</a>
      <a href="/about">About</a>
      <a href="/contact">Contact</a>
    </nav>

    <!-- Center: Search Bar -->
    <div class="navbar-section nav-search" id="navSearch">
      <form class="search-form" action="/search" method="GET">
        <input type="text" name="query" placeholder="Search books..." required />
        <button type="submit">üîç</button>
      </form>
    </div>

    <!-- Right: Auth Links -->
    <div class="navbar-section auth-links" id="authLinks">
      <% if (typeof loggedIn !== 'undefined' && loggedIn && user) { %>
        <span class="greeting">Hi, <%= user.name %>!</span>
        <form action="/logout" method="GET" style="display: inline;">
          <button type="submit" class="logout-btn">Logout</button>
        </form>
      <% } else { %>
        <a href="/login">Login</a>
        <a href="/signup">Signup</a>
      <% } %>
    </div>

  </header>

  <!-- Page Content -->
  <main>
    <%- body %>
  </main>

  <script>
    function toggleMenu() {
      document.getElementById("navLinks").classList.toggle("show");
      document.getElementById("authLinks").classList.toggle("show");
      document.getElementById("navSearch").classList.toggle("show");
    }
  </script>

</body>
</html>
