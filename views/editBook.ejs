<%- include('partials/header') %>

<div class="container mt-5">
  <% if (typeof error !== 'undefined' && error) { %>
    <div class="alert alert-danger"><%= error %></div>
  <% } %>

  <% if (typeof success !== 'undefined' && success) { %>
    <div class="alert alert-success"><%= success %></div>
  <% } %>

  <div class="row justify-content-center">
    <div class="col-lg-8 col-md-10">
      <h2 class="text-center mb-5 fw-bold">Edit Book</h2>

      <form action="/books/<%= book._id %>?_method=PUT" method="POST" enctype="multipart/form-data" class="card shadow p-5 rounded-4">
        
        <!-- Title -->
        <div class="mb-4">
          <label for="title" class="form-label fw-semibold">📖 Title</label>
          <input type="text" id="title" name="title" class="form-control form-control-lg" value="<%= book.title %>" required>
        </div>

        <!-- Author -->
        <div class="mb-4">
          <label for="author" class="form-label fw-semibold">✍️ Author</label>
          <input type="text" id="author" name="author" class="form-control form-control-lg" value="<%= book.author %>" required>
        </div>

        <!-- Description -->
        <div class="mb-4">
          <label for="desc" class="form-label fw-semibold">📝 Description</label>
          <textarea id="desc" name="desc" class="form-control form-control-lg" rows="5" required><%= book.desc %></textarea>
        </div>

        <!-- Mood Tags -->
        <div class="mb-4">
          <label for="moodtags" class="form-label fw-semibold">🏷️ Mood Tags (comma-separated)</label>
          <input type="text" id="moodtags" name="moodtags" class="form-control form-control-lg" value="<%= book.moodtags.join(', ') %>">
        </div>

        <!-- Cover Image Upload -->
        <div class="mb-4">
          <label for="coverImage" class="form-label fw-semibold">🖼️ Change Cover Image (Max 2MB)</label>
          <input type="file" id="coverImage" name="coverImage" accept="image/png, image/jpeg" class="form-control form-control-lg">
        </div>

        <div class="mb-4">
          <label for="pdfFile" class="form-label fw-semibold">Change PDF File</label>
          <input type="file" id="pdfFile" name="pdfFile" accept="application/pdf" class="form-control form-control-lg">
        </div>

        <!-- Buttons -->
        <div class="d-flex justify-content-end mt-4 gap-3">
          <button type="submit" class="btn btn-success px-4">💾 Save Changes</button>
          <a href="/books/<%= book._id %>" class="btn btn-outline-secondary">← Cancel</a>
        </div>
      </form>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
